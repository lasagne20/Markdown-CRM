// Jest setup file - Minimal configuration for speed
// Configuration globale pour les tests

// Mock des APIs Web manquantes dans jsdom (optimisé)
Object.defineProperty(window, 'matchMedia', {
  writable: true,
  value: jest.fn().mockImplementation(() => ({
    matches: false,
    addListener: jest.fn(),
    removeListener: jest.fn()
  })),
});

// Mock de HTMLElement.scrollIntoView
HTMLElement.prototype.scrollIntoView = jest.fn();

// Mock de l'API ResizeObserver
global.ResizeObserver = jest.fn().mockImplementation(() => ({
  observe: jest.fn(),
  unobserve: jest.fn(),
  disconnect: jest.fn(),
}));

// Mock de l'API fetch si nécessaire
if (typeof fetch === 'undefined') {
  global.fetch = jest.fn(() =>
    Promise.resolve({
      ok: true,
      json: () => Promise.resolve({ svg: '<svg>test-icon</svg>' }),
    })
  );
}

// Configuration simplifiée pour les tests d'événements DOM
// Les tests utilisent maintenant onclick/onblur directement, donc moins de setup nécessaire